@page "/"

<MudContainer Class="mt-16 px-8" MaxWidth="MaxWidth.False">

    <AuthorizeView Policy="IsUser">
        <Authorized>
            <RedirectComponent URL="/home"/>
        </Authorized>

        <NotAuthorized>
            <RedirectComponent URL="/login"/>
        </NotAuthorized>
    </AuthorizeView>

    <AuthorizeView Policy="IsAdmin">
        <RedirectComponent URL="/admin"/>
    </AuthorizeView>
     
</MudContainer>