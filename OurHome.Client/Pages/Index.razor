@page "/"

<MudContainer Class="mt-16 px-8" MaxWidth="MaxWidth.False">


    @*Make sure to revist these permissions *@

    <AuthorizeView Policy="User">
        <Authorized>
            <RedirectComponent URL="/home"/>
        </Authorized>

        <NotAuthorized>
            <RedirectComponent URL="/login"/>
        </NotAuthorized>
    </AuthorizeView>

    <AuthorizeView Policy="HomeOwner">
        <RedirectComponent URL="/admin"/>
    </AuthorizeView>
     
</MudContainer>